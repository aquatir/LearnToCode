schema {
    query: EntryPoint
}

type EntryPoint {
    cart(id: Long): Cart
}

type Cart {
    id: Long!
    cartItems: [CartItem]!
    total: BigDecimal!
}

type CartItem {
    id: Long!
    quantity: Int!
    cart: Cart!
    product: Product!
}

type Product {
    id: Long!
    name: String!
    totalQuantity: Int!
    price: BigDecimal!
    picture: Picture!
}

type Picture {
    pictureDescription: String!
    pictureUrl: String!
}